[user]
	name = welsny
	email = zengw@mssm.org
	email = wesley.szeng@compass.com
[credential]
	helper = osxkeychain
[alias]
	st = status
	br = branch
	ci = commit
	co = checkout
	put = push origin HEAD
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RX
[remote "review"]
    url = ssh://wesley.zeng@code.urbancompass.com:29418/urbancompass
    fetch = +refs/heads/*:refs/remotes/review/*
    push = HEAD:refs/for/master
[difftool]
    prompt = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d -u ~/.config/nvim/init.vim \"$LOCAL\" \"$REMOTE\""
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
